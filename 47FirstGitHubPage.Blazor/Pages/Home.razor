@page "/"
@using System.Globalization
@using _47FirstGitHubPage.Blazor.Components

<PageTitle>Home Page</PageTitle>

<LocaleButton CultureChanged="StateHasChanged"/>

<SectionContainer CssClass="main-section">
    <FullscreenFixedBackground ZIndex="-3" CssClass="main-background"/>
    <FullscreenFixedBackground ZIndex="-2" CssClass="logo-background"/>
    <FullscreenFixedBackground ZIndex="-1" CssClass="noise-background"/>

    <div class="profile-container">
        <div class="flex-row gap-1em width-max-parent">
            <div class="profile-avatar"></div>
            <div class="flex-column gap-half-em no-margin-parent">
                <p style="font-size: 1.3em" class="foreground-dark-color">@PageLocalizer["Personal"]</p>
                <p style="font-size: 1.55em" class="foreground-light-color">@PageLocalizer["Anton Derevnin"]</p>
                <p style="font-size: 1em" class="foreground-dark-color">47first</p>
            </div>
        </div>

        <p style="font-size: 1.3em; margin-top: 1em;" class="foreground-dark-color">@PageLocalizer["Languages"]</p>

        <div class="flex-row gap-half-em no-margin-parent">
            <div class="skill">@PageLocalizer["RussiaSkill"]</div>
            <div class="skill">@PageLocalizer["EnglishSkill"]</div>
        </div>
    </div>

    <div class="links-container">
        <p style="font-size: 1.3em" class="foreground-dark-color">@PageLocalizer["Links"]</p>

        <div class="flex-row gap-2em no-margin-parent">
            <a href="https://t.me/erlich_bachmanity" target="_blank" class="link telegram">
                <img style="transform: translateX(-0.25em)" src="./images/telegram.svg"/>
            </a>
            <a href="https://47first.itch.io/" target="_blank" class="link itch-io">
                <img src="./images/itch-io.svg"/>
            </a>
            <a href="https://github.com/47first" target="_blank" class="link github">
                <img src="./images/github.svg"/>
            </a>
        </div>
    </div>

    <div class="portfolio-footer">
        <div class="dash-lines"></div>
        <p>Portfolio below</p>
        <div class="dash-lines"></div>
    </div>
</SectionContainer>

<SectionContainer>
    <FullscreenFixedBackground ZIndex="-4" CssClass="ballmen-background"/>
    <FullscreenFixedBackground ZIndex="-3" CssClass="blur-background"/>
    <FullscreenFixedBackground ZIndex="-2" CssClass="noise2-background"/>
    <FullscreenFixedBackground ZIndex="-1" CssClass="ballman-character-background"/>

    <iframe
        frameborder="0"
        src="https://itch.io/embed/3371277?bg_color=000000&amp;fg_color=ffffff&amp;link_color=FF5555&amp;border_color=444444"
        width="552" height="167">
        <a href="https://47first.itch.io/ballmen-beta">Ballmen by 47first</a>
    </iframe>
</SectionContainer>

<SectionContainer>
    <FullscreenFixedBackground CssClass="main-background"/>
</SectionContainer>
